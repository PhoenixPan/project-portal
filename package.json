    "private": true,
    "dependencies": {
        "@types/history": "^4.7.3",
        "@types/node": "^15.3.0",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.5",
        "@types/react-redux": "^7.1.5",
        "@types/react-router-dom": "^5.1.0",
        "@types/redux-form": "^8.1.9",
        "axios": "^0.21.1",
        "axios-retry": "^3.1.1",
        "connected-react-router": "^6.5.2",
        "is-json": "^2.0.1",
        "lodash.throttle": "^4.1.1",
        "node-sass-chokidar": "^1.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-particles-js": "^3.4.1",
        "react-redux": "^7.2.4",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^4.0.3",
        "redux": "^4.0.1",
        "redux-form": "^8.2.0",
        "redux-saga": "^1.0.2",
        "three": "^0.137.0",
        "typescript": "^4.2.4"
    },
    "scripts": {
        "start": "npm-run-all -p watch-css start-js",
        "start-js": "react-scripts start",
        "build": "npm-run-all build-css build-js",
        "build-js": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "build-css": "node-sass-chokidar src/style/index.scss src/style/index.css",
        "watch-css": "npm run build-css && node-sass-chokidar src/style/index.scss src/style/index.css --watch --recursive",
        "eject": "react-scripts eject",
        "prettier": "prettier --write src/**/*.{js,scss}",
        "prettier:check": "prettier --list-different src/**/*.{js,scss}"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": false
    },
    "pre-commit": [
        "prettier:check"
    ],
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "@types/lodash": "^4.14.170",
        "@types/three": "^0.128.0"
    }
}
